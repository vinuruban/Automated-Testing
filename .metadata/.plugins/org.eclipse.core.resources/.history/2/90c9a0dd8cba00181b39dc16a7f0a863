import org.openqa.selenium.chrome.ChromeDriver;

public class SeleniumTest {

	WebDriver driver;
	String url = "https://www.manutd.com/"; //the web i want to view
	String driverType = "webdriver.chrome.driver"; //is it chrome, firefox or ...
	String driverLocation = "C:\\Users\\Admin\\Desktop/chromedriver.exe"; //location of this driver!
	
	@Before
	public void setup() {
		System.setProperty(driverType, driverLocation); //assigns to 
		driver = new ChromeDriver();
		driver.manage().window().maximize().findElement(By.xpath("//*[@id=\"accessible-megamenu-1537197032054-11\"]/span[1]")).click();
		driver.get(url);
		
	}
	
	@Test
//	public void test() {
//		assertTrue(true);
	public void test() {
		
	}
	
	@After
	public void teardown() {
		driver.quit();
	}

